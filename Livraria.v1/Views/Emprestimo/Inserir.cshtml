@model Emprestimo;

@{
    ViewData["Title"] = "Emprestar";
}

<h2>Adicionar Empréstimo</h2>

<form asp-action="Inserir" method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        <label class="control-label">Consulte o Usuário</label>
                        <div class="input-group">
                            <input type="text" id="input-consulta-usuario" class="form-control" placeholder="Nome ou CPF" />
                            <span class="input-group-btn">
                                <button class="btn btn-info" type="button"
                                        onclick="emprestimo.clickConsultarUsuario()">
                                    <i class="fas fa-search"></i>
                                </button>
                            </span>
                        </div><!-- /input-group -->
                    </div>
                </div>
            </div>
            <div id="div-table-usuario" class="row">
                <div class="col-md-12">
                    <table id="table-usuario" class="table table-striped">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Instituição de Ensino</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
            <div id="div-usuario-selecionado" class="row" style="display: none;">
                <div class="col-md-8">
                    <div class="form-group">
                        <label class="control-label">Aluno Selecionado</label>
                        <input type="text" id="input-usuario-selecionado" disabled class="form-control" />
                        <input type="hidden" asp-for="@Model.UsuarioId" id="input-usuario-selecionado-id" class="form-control" />
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        <label class="control-label">Consulte o Livro</label>
                        <div class="input-group">
                            <input type="text" id="input-consulta-livro" class="form-control" placeholder="Titulo ou Autor" />
                            <span class="input-group-btn">
                                <button class="btn btn-info" type="button"
                                        onclick="emprestimo.clickConsultarLivro()">
                                    <i class="fas fa-search"></i>
                                </button>
                            </span>
                        </div><!-- /input-group -->
                    </div>
                </div>
            </div>
            <div id="div-table-livro" class="row">
                <div class="col-md-12">
                    <table id="table-livro" class="table table-striped">
                        <thead>
                            <tr>
                                <th>Titulo</th>
                                <th>Autor</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
            <div id="div-livro-selecionado" class="row" style="display: none;">
                <div class="col-md-8">
                    <div class="form-group">
                        <label class="control-label">Livro Selecionado</label>
                        <input type="text" id="input-livro-selecionado" disabled class="form-control" />
                        <input type="hidden" asp-for="@Model.LivroId" id="input-livro-selecionado-id" class="form-control" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <a class="btn btn-danger" asp-action="EmprestimoHome">Voltar</a>
                <input type="submit" asp-action="Inserir" value="Emprestar" class="btn btn-success" />
                <input type="button" onclick="emprestimo.clickReservar()" id="reservar" value="Reservar" class="btn btn-warning" />
            </div>
        </div>
        <div class="col-md-2" id="div-reserva" style="display: none;">
            <div class="form-group">
                <label class="control-label">Data da Reserva</label>
                <div class="input-group">
                    <input type="date" asp-for="@Model.DataEmprestimo" class="form-control" />
                    <span class="input-group-btn">
                        <input type="submit" asp-action="Reservar" value="Reservar" class="btn btn-success" />
                    </span>
                </div><!-- /input-group -->
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/emprestimo.js">
    </script>
}
